# Environment Configuration
EMULATOR_PATH=/usr/local/bin/vbam
ROM_PATH=roms/pokemon_leaf_green.gba
SAVE_STATE_PATH=saves/

# Training Configuration
MAX_EPISODES=10000
LEARNING_RATE=3e-4
BATCH_SIZE=64
TIMESTEPS_PER_BATCH=2048
CLIP_RANGE=0.2
DISCOUNT_FACTOR=0.99

# Web Dashboard
WEB_HOST=0.0.0.0
WEB_PORT=5000
STREAM_FPS=30

# Logging and Monitoring
LOG_LEVEL=INFO
TENSORBOARD_LOG_DIR=logs/tensorboard
MLFLOW_TRACKING_URI=logs/mlflow
WANDB_PROJECT=pokemon-rl-bot
WANDB_ENTITY=your-wandb-username

# Cloud Configuration
AWS_REGION=us-west-2
AWS_BUCKET=pokemon-rl-models
GCP_PROJECT_ID=your-gcp-project
GCP_BUCKET=pokemon-rl-models

# Redis Configuration (for distributed training)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST="6.0;6.1;7.0;7.5;8.0;8.6"

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Development
DEBUG=False
DEVELOPMENT_MODE=False
